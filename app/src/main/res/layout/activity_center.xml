<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/center_id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_teal_300_color_code">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                style="@style/style_20_A2282F_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:text="您共需为订单支付："/>

            <TextView
                android:id="@+id/textView4"
                style="@style/style_20_A2282F_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/center_tv_pay"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/center_tv_pay"
                android:text="￥"/>

            <TextView
                android:id="@+id/center_tv_pay"
                style="@style/style_20_A2282F_BOLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="0.00"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_id_toolbar">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">
                    <RelativeLayout
                        android:id="@+id/center_rl_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:elevation="5dp"
                        android:padding="10.0dip">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/payment_address_text"
                                style="@style/style_16_666666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20.0dip"
                                android:text="收货人地址"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_12_666666_BOLD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20.0dip"
                                    android:maxWidth="200.0dip"
                                    android:padding="3dp"
                                    android:text="姓名："/>

                                <TextView
                                    android:id="@+id/textAddress2"
                                    style="@style/style_16_507FD8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_12_666666_BOLD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20.0dip"
                                    android:maxWidth="200.0dip"
                                    android:padding="3dp"
                                    android:text="电话："/>

                                <TextView
                                    android:id="@+id/textAdress3"
                                    style="@style/style_16_507FD8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/style_12_666666_BOLD"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="20.0dip"
                                    android:maxWidth="200.0dip"
                                    android:padding="3dp"
                                    android:text="详细地址："/>

                                <TextView
                                    android:id="@+id/textAdress4"
                                    style="@style/style_16_507FD8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12dp"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:id="@+id/payment_payType_rel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:elevation="5dp"
                        android:padding="10.0dip">

                        <TextView
                            android:id="@+id/payment_payHint_text"
                            style="@style/style_16_666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付方式："/>

                        <TextView
                            android:id="@+id/payment_payValue_text"
                            style="@style/style_16_507FD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/payment_payHint_text"
                            android:layout_marginRight="20.0dip"
                            android:layout_toEndOf="@+id/payment_payHint_text"
                            android:text="在线支付"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">


                    <RelativeLayout
                        android:id="@+id/payment_sendTime_rel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:elevation="5dp"
                        android:padding="10.0dip">

                        <TextView
                            android:id="@+id/payment_sendTimeHint_text"
                            style="@style/style_16_666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="送货时间："/>

                        <TextView
                            android:id="@+id/payment_sendTimeValue_text"
                            style="@style/style_16_507FD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20.0dip"
                            android:layout_toEndOf="@+id/payment_sendTimeHint_text"
                            android:text="任何时间"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">
                    <RelativeLayout
                        android:id="@+id/payment_invoice_rel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:elevation="5dp"
                        android:padding="10.0dip">

                        <TextView
                            android:id="@+id/payment_invoiceHint_text"
                            style="@style/style_16_666666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发票详情"/>

                        <TextView
                            android:id="@+id/payment_invoiceValue_text"
                            style="@style/style_16_507FD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/payment_invoiceHint_text"
                            android:layout_marginRight="20.0dip"
                            android:text="不需要发票"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">
                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp">


                        <LinearLayout
                            android:id="@+id/payment_remarkHint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10.0dip"
                            android:elevation="5dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:padding="10.0dip"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/payment_remarkHint_text"
                                style="@style/style_16_507FD8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1111"/>

                            <TextView
                                android:id="@+id/payment_remarkView_text"
                                style="@style/style_16_507FD8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1111"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/payment_remarkView_empty"
                            style="@style/style_16_507FD8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:hint="无发票信息"
                            android:padding="10.0dip"/>
                    </FrameLayout>

                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="商品明细"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/md_white_color_code"/>

                <com.heima.jyl.redboy.ui.view.ListView
                    android:id="@+id/payment_product_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10.0dip"
                    android:cacheColorHint="#00000000"
                    android:divider="@color/md_white_color_code"
                    android:dividerHeight="4dp"
                    android:elevation="5dp"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="true"
                    android:listSelector="@drawable/shape_rounded_selectable"
                    android:orientation="vertical"/>


            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scrollView"
            android:layout_alignParentStart="true"
            android:text="购物车"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp">

                <TextView
                    style="@style/style_14_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5.0dip"
                    android:text="数量总计："/>

                <TextView
                    android:id="@+id/shopcar_total_buycount_text"
                    style="@style/style_14_A10D0B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5.0dip"
                    android:text="2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"

                android:layout_height="25dp">

                <TextView
                    style="@style/style_14_4B4B4B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5.0dip"
                    android:text="金额总计(不含运费)："/>

                <TextView
                    android:id="@+id/shopcar_total_money_text"
                    style="@style/style_18_A10D0B_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5.0dip"
                    android:text="270"/>

                <TextView
                    style="@style/style_18_A10D0B_BOLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/shopcar_total_money_text"
                    android:paddingRight="5.0dip"
                    android:text="￥："/>
            </RelativeLayout>

            <Button
                android:id="@+id/ordr_submit_bottom_text"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/md_teal_300_color_code"
                android:elevation="10dp"
                android:gravity="center"
                android:text="提交订单"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>