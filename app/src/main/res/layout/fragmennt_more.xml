<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

        <View
            android:id="@+id/more_header"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="90dp"
            android:background="@mipmap/red_baby_logo"
            android:transitionName="holder1"
        />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/more_fab"
            android:transitionName="fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:elevation="10dp"
            android:layout_below="@+id/more_header"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:stateListAnimator="@drawable/fab_anim"
            android:layout_marginTop="-26dp"
            android:src="@drawable/ic_account_circle"/>
    </RelativeLayout>

    <!--<com.heima.jyl.redboy.ui.view.Listitemview-->
        <!--android:id="@+id/ltv_account"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginRight="20dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:elevation="5dp"-->
        <!--itheima:text="账户中心"/>-->

    <com.heima.jyl.redboy.ui.view.Listitemview
        android:id="@+id/ltv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        itheima:bgtype="middle"
        itheima:text="浏览记录"/>

    <com.heima.jyl.redboy.ui.view.Listitemview
        android:id="@+id/ltv_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        itheima:bgtype="middle"
        itheima:text="帮助中心"/>

    <com.heima.jyl.redboy.ui.view.Listitemview
        android:id="@+id/ltv_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        itheima:bgtype="middle"
        itheima:text="用户反馈"/>

    <com.heima.jyl.redboy.ui.view.Listitemview
        android:id="@+id/ltv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="5dp"
        itheima:bgtype="last"
        itheima:text="关于"/>

    <Button
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_orange"
        android:elevation="8dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="客服电话:400-81929039"
        android:textColor="#FFF"
        android:textSize="20sp"/>

</LinearLayout>


