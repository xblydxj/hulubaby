<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="25dp"
    android:padding="25dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_collector_list_item"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_collector_list_item"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_collector_list_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="dalijijiwan"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/price_collector_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥9.9"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="22sp"/>
                <TextView
                    android:id="@+id/marketPrice_collector_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape2_collector_list_item"
                    android:text="￥99"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/num_collector_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="已有19999人评价"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>